<UserControl x:Class="APPProyecto.MisControles.UCAvatares"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APPProyecto.MisControles"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="4" CornerRadius="30" Padding="5" Background="Gray">
            <Image x:Name="imgAvatar" Stretch="UniformToFill" Margin="3,5,5,8" MouseLeftButtonDown="imgAvatar_MouseLeftButtonDown" />
        </Border>
    </Grid>
</UserControl>
